
# ###############################################################################
#									Makefile  objs								#
# ###############################################################################

NAME = minishell
SRC = src/main.c utils/error.c utils/ft_split.c utils/builtins.c utils/string.c utils/utils.c
CFLAGS = -Wall -Wextra -Werror
OBJS = $(SRC:.c=.o)
CLR_RMV		:= \033[0m
RED		    := \033[1;31m
GREEN		:= \033[1;32m
YELLOW		:= \033[1;33m
BLUE		:= \033[1;34m
CYAN 		:= \033[1;36m
RM		    := rm -f
${NAME}:	${OBJS}
			@echo "$(GREEN)Compilation ${CLR_RMV}of ${YELLOW}$(NAME) ${CLR_RMV}..."
			${CC} ${CFLAGS} -o ${NAME} ${OBJS}
			@echo "$(YELLOW)$(NAME) created[0m ‚úîÔ∏è"

all:		${NAME}

bonus:		all

clean:
			@ ${RM} *.o */*.o */*/*.o
			@ echo "$(RED)Deleting $(CYAN)$(NAME) $(CLR_RMV)objs ‚úîÔ∏è"

fclean:		clean
			@ ${RM} ${NAME}
			@ echo "$(RED)Deleting $(CYAN)$(NAME) $(CLR_RMV)binary ‚úîÔ∏è"

re:			fclean all

.PHONY:		all clean fclean re

